<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyAccess"
        tools:targetApi="31">
        <activity
            android:name=".maps.ChoiceActivity"
            android:exported="false" />
        <activity
            android:name=".notes.AddNote"
            android:exported="false" />
        <activity
            android:name=".notes.AllNotes"
            android:exported="false" />
        <activity
            android:name=".sms.NewSMS"
            android:exported="false" />

        <receiver
            android:name=".sms.SmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_SENT" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".reminders.AllReminders"
            android:exported="false" />
        <activity
            android:name=".reminders.Reminder"
            android:exported="false" />
        <activity
            android:name=".calls.History"
            android:exported="false" />
        <activity
            android:name=".sms.SMS"
            android:exported="false" />
        <activity
            android:name=".calls.AddContact"
            android:exported="false" />
        <activity
            android:name=".Help"
            android:exported="false" />
        <activity
            android:name=".sms.Chat"
            android:exported="false" />
        <activity
            android:name=".calls.Calls"
            android:exported="false" />
        <activity
            android:name=".Test"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>